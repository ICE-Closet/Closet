<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".auth.login">



    <ImageView
        android:id="@+id/app_name"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/user_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/appname" />


    <EditText
        android:id="@+id/user_email"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/email"
        android:fontFamily="@font/ostrich"
        android:hint=" E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#EEE6E6"
        android:textColorHint="#EEE6E6"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/user_pw"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/password"
        android:fontFamily="@font/ostrich"
        android:hint=" Password"
        android:inputType="textPassword"
        android:password="false"
        android:textColor="#EEE6E6"
        android:textColorHint="#EEE6E6"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/color_change"
        android:fontFamily="@font/ostrich"
        android:text="log in"
        android:textColor="#EEE6E6"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/google_login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/kakao_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_login_btn"
        android:layout_width="301dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/kakao_login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/color_change"
        android:fontFamily="@font/ostrich"
        android:text="Sign Up"
        android:textColor="#EEE6E6"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/createBy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/createBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@2020 HUFS ICE Closet Application"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>