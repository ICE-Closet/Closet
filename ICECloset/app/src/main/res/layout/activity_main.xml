<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".main">

    <TextView
        android:id="@+id/today"
        android:layout_width="198dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/ostrich"
        android:gravity="center|start"
        android:text="today.."
        android:textColor="#EEE6E6"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/weatherAPI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <TextView
        android:id="@+id/weatherAPI"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/ostrich"
        android:gravity="center|start"
        android:text=" weather API"
        android:textColor="#EEE6E6"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_closet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/user_closet"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/color_change"
        android:drawableTop="@drawable/closet"
        android:fontFamily="@font/ostrich"
        android:text="Your Closet"
        android:textColor="#EEE6E6"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/user_cody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/user_cody"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/color_change"
        android:fontFamily="@font/ostrich"
        android:text="today cody"
        android:textColor="#EEE6E6"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/logout_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/color_change"
        android:fontFamily="@font/ostrich"
        android:text="logout"
        android:textColor="#EEE6E6"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>