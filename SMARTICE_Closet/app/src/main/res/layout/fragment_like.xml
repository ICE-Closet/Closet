<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.likeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mostUserLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most You Like"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintEnd_toEndOf="@+id/view8"
            app:layout_constraintStart_toStartOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/view8"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/wave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/likeColors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:includeFontPadding="false"
                                android:text="Colors"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/no1_tV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@id/likeColors"
                                android:includeFontPadding="false"
                                android:text="1."
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/no2_tV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/no1_tV"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/likeColors"
                                android:includeFontPadding="false"
                                android:text="2."
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/no3_tV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/no2_tV"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/likeColors"
                                android:includeFontPadding="false"
                                android:text="3."
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/likeTop_iV"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/topwear" />

                            <TextView
                                android:id="@+id/likeTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/likeTop_iV"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="5dp"
                                android:includeFontPadding="false"
                                android:text="Top"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/likeBottom_iV"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/bottomwear" />

                            <TextView
                                android:id="@+id/likeBottom_tV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/likeBottom_iV"
                                android:layout_marginLeft="23dp"
                                android:layout_marginTop="5dp"
                                android:includeFontPadding="false"
                                android:text="Bottom"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/likeOuter_iV"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/outerwear" />

                            <TextView
                                android:id="@+id/likeOuter_tV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/likeOuter_iV"
                                android:layout_marginLeft="29dp"
                                android:layout_marginTop="5dp"
                                android:includeFontPadding="false"
                                android:text="Outer"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/likeDress_iV"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/dresswear" />

                            <TextView
                                android:id="@+id/likeDress_tV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/likeDress_iV"
                                android:layout_marginLeft="27dp"
                                android:layout_marginTop="5dp"
                                android:includeFontPadding="false"
                                android:text="Dress"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>